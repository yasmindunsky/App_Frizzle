<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/colors"
            android:layout_width="match_parent"
            android:layout_height="@dimen/colors_top_screen2"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_color_2" />

        <ImageView
            android:id="@+id/mentor"
            style="@style/mentorImageOnboarding"
            android:layout_alignParentBottom="false"
            android:layout_below="@+id/colors"
            android:layout_marginTop="130dp" />

        <LinearLayout
            android:id="@+id/bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/mentor"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/mentor"
            android:background="@drawable/bubble"
            android:gravity="start"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/mentorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:text="@string/mentor_introduction"
                android:textAppearance="@style/SlideText" />

            <EditText
                android:id="@+id/usersNameInput"
                style="@style/userNameEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:hint="@string/whats_your_name"
                android:inputType="textPersonName" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/mentorText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_toRightOf="@+id/mentor"
                android:layout_weight="1"
                android:text="@string/onboardingMentorText0"
                android:textAppearance="@style/SlideText" />
        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/goToLoginButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bubble"
            android:layout_centerHorizontal="true"
            android:background="@android:color/transparent"
            android:text="@string/already_have_an_account"
            android:textAppearance="@style/italicFormText" />


    </RelativeLayout>

</FrameLayout>
