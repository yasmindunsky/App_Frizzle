<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLightGrey"
    tools:context="com.example.yasmindunsky.frizzleapp.lesson.exercise.ExerciseFragment">

    <RelativeLayout
        android:id="@+id/exerciseElementsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/exerciseImage"
            style="@style/ExerciseImage"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/start_margin"
            android:layout_marginStart="@dimen/start_margin"
            android:src="@drawable/exercise_2_3" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/exerciseQuestion"
            style="@style/ExerciseText"
            android:layout_height="wrap_content"
            android:layout_below="@id/exerciseImage"
            android:text="@string/slideText"
            android:textAppearance="@style/ExerciseText" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/checkButton"
            style="@style/checkButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="false"
            android:layout_centerInParent="true"
            android:text="@string/check" />

    </RelativeLayout>

</FrameLayout>
