<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yasmindunsky.frizzleapp.lesson.exercise.ExerciseFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/exerciseElementsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/exerciseImage"
            android:layout_width="match_parent"
            android:layout_height="50pt"
            android:layout_alignParentTop="true"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/exerciseQuestion"
            style="@style/LessonText"
            android:layout_below="@id/exerciseImage"
            android:text="@string/slideText" />

        <Button
            android:id="@+id/checkButton"
            style="@style/checkButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="false"
            android:layout_centerInParent="true"
            android:text="@string/check" />

    </RelativeLayout>

</FrameLayout>
