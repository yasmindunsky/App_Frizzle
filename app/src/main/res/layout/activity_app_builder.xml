    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="250dp"
        android:layout_height="@dimen/app_bar_height"
        android:layout_alignParentStart="true"
        android:layout_below="@id/taskExpandableLayout"
        app:tabIndicatorColor="@color/frizzle_light_blue"
        app:tabTextAppearance="@style/AppBuilderTabTextAppearance" />

    <LinearLayout
        android:id="@+id/errorDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/backgroundDarkGrey"
        android:elevation="10dp"
        android:orientation="vertical"
        android:visibility="invisible">

        <ImageButton
            android:id="@+id/clickToExpandError"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal|center"
            android:scaleType="fitCenter"
            android:text="="
            android:textColor="@color/TextLightGrey"
            android:textSize="30sp"
            app:srcCompat="@drawable/ic_expand_grab_icon" />

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/errorExpandableLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="10dp"
            app:el_duration="1000"
            app:el_expanded="true"
            app:el_parallax="0.5">

            <TextView
                android:id="@+id/error"
                style="@style/errorText"
                android:text="Error text" />

        </net.cachapa.expandablelayout.ExpandableLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragmentFrame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tabLayout"
        android:layout_marginTop="8dp"
        android:elevation="0dp">

    </FrameLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/play"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="11dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="false"
        android:background="@drawable/run_button_background"
        android:cropToPadding="false"
        android:elevation="10dp"
        android:onClick="onPlay"
        android:paddingLeft="12dp"
        android:paddingRight="8dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_play_run_icon" />

</RelativeLayout>