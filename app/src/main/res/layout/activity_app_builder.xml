<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:layoutDirection="ltr"
    tools:context="com.frizzl.app.frizzleapp.appBuilder.AppBuilderActivity"
    tools:layout_editor_absoluteY="25dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/builderToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_height"
        android:layout_alignParentTop="true"
        android:background="@color/black"
        android:gravity="center"
        android:theme="?attr/actionBarTheme"
        app:navigationIcon="@drawable/ic_home">

    </android.support.v7.widget.Toolbar>

    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/taskExpandableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/builderToolbar"
        android:background="@color/frizzle_light_blue"
        app:el_duration="1000"
        app:el_expanded="true"
        app:el_parallax="0.5">

        <FrameLayout
            android:id="@+id/taskFrame"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <com.frizzl.app.frizzleapp.CustomViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

