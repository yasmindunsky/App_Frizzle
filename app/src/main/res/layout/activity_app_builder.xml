<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yasmindunsky.frizzleapp.appBuilder.AppBuilderActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/builderToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_height"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimaryDark"
        android:gravity="center"
        android:theme="?attr/actionBarTheme"
        app:navigationIcon="@drawable/ic_home"
        >

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/builderTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/appBuilderTitle"
            android:textAppearance="@style/ActivityTitle" />

    </android.support.v7.widget.Toolbar>


        <Button
            android:id="@+id/Play"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_below="@id/builderToolbar"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/tabLayout"
            android:background="@drawable/run_button_background"
            android:onClick="onPlay"
            android:text=">" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_below="@id/builderToolbar"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            app:tabGravity="fill"
            app:tabMode="fixed" />

        <TextView
            android:id="@+id/task"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tabLayout"
            android:gravity="center_horizontal"
            android:text="@string/task_text" />

        <FrameLayout
            android:id="@+id/fragmentFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/task"
            android:layout_marginTop="8dp" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
