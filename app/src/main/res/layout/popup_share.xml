<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context="com.frizzl.app.frizzleapp.goToAppBuilderFragment">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="300dp"
        android:background="@drawable/popup_bg">

        <ImageView
            android:id="@+id/mentor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/gotItButton"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="100dp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/ic_mentor" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/mentorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/mentor"
            android:layout_marginRight="50dp"
            android:layout_marginTop="22dp"
            android:layout_toRightOf="@+id/mentor"
            android:background="@drawable/bubble_left"
            android:breakStrategy="simple"
            android:text="@string/beta"
            android:textAppearance="@style/taskInNavigationText" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/gotItButton"
            style="@style/Button.CheckExercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/got_it"
            android:textSize="18sp" />

    </RelativeLayout>

</FrameLayout>
