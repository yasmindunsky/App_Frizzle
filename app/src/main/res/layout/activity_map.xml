<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yasmindunsky.frizzleapp.MapActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/map_bg"
            android:foregroundGravity="top"
            android:gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/mapToolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_bar_height"
                android:layout_gravity="top"
                android:background="@color/white"
                android:elevation="10dp"
                android:gravity="center"
                android:theme="?attr/actionBarTheme"
                app:navigationIcon="@drawable/ic_home">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/lessonTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textAppearance="@style/ActivityTitle"
                    android:textColor="@color/TextGrey"
                    app:fontFamily="@font/hero_regular"
                    app:textAllCaps="true" />
            </android.support.v7.widget.Toolbar>

            <Button
                android:id="@+id/lesson1"
                style="@style/mapLessonButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/map_lesson_circle"
                android:onClick="goToLesson"
                android:text="1" />

            <Button
                android:id="@+id/lesson2"
                style="@style/mapLessonButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@drawable/map_lesson_circle"
                android:onClick="goToLesson"
                android:text="2" />

            <Button
                android:id="@+id/lesson3"
                style="@style/mapLessonButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@drawable/map_lesson_circle"
                android:onClick="goToLesson"
                android:text="3" />

            <Button
                android:id="@+id/lesson4"
                style="@style/mapLessonButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@drawable/map_lesson_circle"
                android:onClick="goToLesson"
                android:text="4" />

            <Button
                android:id="@+id/lesson5"
                style="@style/mapLessonButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@drawable/map_lesson_circle"
                android:onClick="goToLesson"
                android:text="5" />

            <Button
                android:id="@+id/lesson6"
                style="@style/mapLessonButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@drawable/map_lesson_circle"
                android:onClick="goToLesson"
                android:text="6" />

            <Button
                android:id="@+id/lesson7"
                style="@style/mapLessonButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@drawable/map_lesson_circle"
                android:onClick="goToLesson"
                android:text="7" />

            <Button
                android:id="@+id/playground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="11dp"
                android:onClick="goToPlayground"
                android:text="@string/playground"
                android:visibility="invisible" />
        </LinearLayout>

    </FrameLayout>

</android.support.constraint.ConstraintLayout>
