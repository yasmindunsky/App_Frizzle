<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/map_bg"
    tools:context="com.frizzl.app.frizzleapp.map.MapActivity"
    tools:layout_editor_absoluteY="25dp">

    <ScrollView
        android:id="@+id/map_scroll_view"
        android:layout_width="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapToolbar"
        app:layout_constraintVertical_bias="0.0"
        android:layout_height="0dp"
        android:fillViewport="false">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingTop="5dp">

            <com.frizzl.app.frizzleapp.map.AppMapButton
                android:id="@+id/friendship_app"
                style="@style/Button.MapApp"
                android:background="@drawable/map_app_circle_b_app_selector"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                custom:completedDrawable="@drawable/map_app_circle_b_app_completed"
                custom:disabledColor="#c4d6e7"
                custom:enabledColor="#3651a0">

                <ImageButton
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:background="@drawable/ic_friendship_test_app_icon"
                    android:scaleType="fitCenter" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="@string/friendship_test_app"
                    android:textAppearance="@style/Text.Map"
                    android:textSize="16sp" />
            </com.frizzl.app.frizzleapp.map.AppMapButton>

            <com.frizzl.app.frizzleapp.map.PracticeMapButton
                android:id="@+id/variables_practice"
                style="@style/Button.MapPractice"
                android:layout_marginTop="22dp"
                android:background="@drawable/map_app_circle_b_practice2_selector"
                android:text="@string/variables_practice"
                android:textAppearance="@style/Text.Map"
                app:layout_constraintHorizontal_bias="0.3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/friendship_app"
                custom:completedDrawable="@drawable/map_app_circle_b_practice2_completed"
                custom:disabledColor="#c4d6e7"
                custom:enabledColor="#2466a5" />

            <com.frizzl.app.frizzleapp.map.PracticeMapButton
                android:id="@+id/views_practice"
                style="@style/Button.MapPractice"
                android:layout_marginTop="16dp"
                android:background="@drawable/map_app_circle_b_practice1_selector"
                android:text="@string/views_practice"
                android:textAppearance="@style/Text.Map"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/variables_practice"
                custom:completedDrawable="@drawable/map_app_circle_b_practice1_completed"
                custom:disabledColor="#b3dce7"
                custom:enabledColor="#127baa" />

            <com.frizzl.app.frizzleapp.map.IntroMapButton
                android:id="@+id/friendship_intro"
                style="@style/Button.MapPractice"
                android:layout_marginTop="8dp"
                android:background="@drawable/map_app_circle_b_intro_selector"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="15dp"
                android:textAppearance="@style/Text.Map"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.75"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/views_practice"
                custom:completedDrawable="@drawable/map_app_circle_b_intro_completed"
                custom:disabledColor="#b3dce7"
                custom:enabledColor="#b3dce7">

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_margin="3dp"
                    android:adjustViewBounds="false"
                    android:background="@drawable/ic_friendship_test_intro"
                    android:scaleType="fitCenter"
                    tools:layout_editor_absoluteX="25dp"
                    tools:layout_editor_absoluteY="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:gravity="top|center_horizontal"
                    android:lineHeight="0dp"
                    android:padding="0dp"
                    android:singleLine="false"
                    android:text="@string/friendship_intro"
                    android:textAppearance="@style/Text.Map"
                    android:textSize="11sp"
                    tools:layout_editor_absoluteX="10dp"
                    tools:layout_editor_absoluteY="50dp" />
            </com.frizzl.app.frizzleapp.map.IntroMapButton>

            <com.frizzl.app.frizzleapp.map.AppMapButton
                android:id="@+id/polly_app"
                style="@style/Button.MapApp"
                android:background="@drawable/map_app_circle_polly_selector"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.95"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/friendship_intro"
                custom:completedDrawable="@drawable/map_app_circle_polly_completed"
                custom:disabledColor="#d6bfda"
                custom:enabledColor="#782c86"
                custom:levelID="4">

                <ImageButton
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:background="@drawable/ic_polly_app_icon"
                    android:scaleType="fitCenter" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="@string/polly_app"
                    android:textAppearance="@style/Text.Map"
                    android:textSize="16sp" />
            </com.frizzl.app.frizzleapp.map.AppMapButton>

            <com.frizzl.app.frizzleapp.map.PracticeMapButton
                android:id="@+id/onclick_practice"
                style="@style/Button.MapPractice"
                android:layout_marginTop="22dp"
                android:background="@drawable/map_app_circle_practice3_selector"
                android:text="@string/onclick_practice"
                android:textAppearance="@style/Text.Map"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/polly_app"
                custom:completedDrawable="@drawable/map_app_circle_practice3_completed"
                custom:disabledColor="#dfc7dc"
                custom:enabledColor="#892f7c"
                custom:levelID="3" />

            <com.frizzl.app.frizzleapp.map.PracticeMapButton
                android:id="@+id/speakout_practice"
                style="@style/Button.MapPractice"
                android:layout_marginTop="22dp"
                android:background="@drawable/map_app_circle_practice2_selector"
                android:text="@string/speakout_practice"
                android:textAppearance="@style/Text.Map"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/onclick_practice"
                custom:completedDrawable="@drawable/map_app_circle_practice2_completed"
                custom:disabledColor="#e0c1d5"
                custom:enabledColor="#983273"
                custom:levelID="2" />

            <com.frizzl.app.frizzleapp.map.PracticeMapButton
                android:id="@+id/first_practice"
                style="@style/Button.MapPractice"
                android:layout_marginTop="14dp"
                android:background="@drawable/map_app_circle_practice1_selector"
                android:text="@string/first_practice"
                android:textAppearance="@style/Text.Map"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/speakout_practice"
                custom:completedDrawable="@drawable/map_app_circle_practice1_completed"
                custom:disabledColor="#e4c2d2"
                custom:enabledColor="#a7356a"
                custom:levelID="1" />

            <com.frizzl.app.frizzleapp.map.IntroMapButton
                android:id="@+id/polly_intro"
                style="@style/Button.MapIntro"
                android:layout_marginBottom="22dp"
                android:layout_marginTop="46dp"
                android:background="@drawable/map_app_circle_intro_selector"
                android:orientation="vertical"
                android:padding="10dp"
                android:textAppearance="@style/Text.Map"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/first_practice"
                custom:completedDrawable="@drawable/map_app_circle_intro_completed"
                custom:disabledColor="#b73861"
                custom:enabledColor="#b73861"
                custom:levelID="0">

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/ic_polly_app_intro"
                    android:scaleType="fitCenter"
                    tools:layout_editor_absoluteX="30dp"
                    tools:layout_editor_absoluteY="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:gravity="top|center"
                    android:text="@string/polly_intro"
                    android:textSize="11sp"
                    android:textAppearance="@style/Text.Map"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="61dp" />
            </com.frizzl.app.frizzleapp.map.IntroMapButton>

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/mapToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_height"
        android:layout_alignParentTop="true"
        android:layout_gravity="top"
        android:background="@color/white"
        android:elevation="4dp"
        android:gravity="center"
        android:theme="?attr/actionBarTheme">

        <ImageView
            android:id="@+id/support_icon"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_margin="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_feedback_support"
            tools:layout_editor_absoluteX="248dp"
            tools:layout_editor_absoluteY="4dp" />

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/app_name"
            android:textAppearance="@style/Text.Title.Dark" />
    </android.support.v7.widget.Toolbar>

</android.support.constraint.ConstraintLayout>
