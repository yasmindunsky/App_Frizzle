<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/map_bg"
    tools:context="com.frizzl.app.frizzleapp.map.MapActivity"
    tools:layout_editor_absoluteY="25dp">

    <ScrollView
        android:id="@+id/map_scroll_view"
        android:layout_width="0dp"

        android:layout_height="0dp"
        android:fillViewport="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapToolbar">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <com.frizzl.app.frizzleapp.map.AppMapButton
                android:id="@+id/friendship_app"
                style="@style/Button.MapApp"
                android:background="@drawable/map_app_circle_light_blue_selector"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/variables_practice"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.225"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                custom:enabledColor="@color/frizzle_light_blue"
                custom:disabledColor="@color/frizzle_faded_light_blue"
                custom:completedDrawable="@drawable/map_app_circle_light_blue_completed"
                custom:appID="2">

                <ImageButton
                    android:id="@+id/ic_friendship_app"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/ic_friendship_test_app_icon"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/text_friendship_app"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Friendship\nTest App"
                    android:textAppearance="@style/Text.Map" />
            </com.frizzl.app.frizzleapp.map.AppMapButton>

            <com.frizzl.app.frizzleapp.map.PracticeMapButton
                android:id="@+id/variables_practice"
                style="@style/Button.MapPractice"
                android:background="@drawable/map_app_circle_yellow_selector"
                android:text="Variables Practice"
                android:textAppearance="@style/Text.Map"
                app:layout_constraintBottom_toTopOf="@+id/views_practice"
                app:layout_constraintHorizontal_bias="0.523"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/friendship_app"
                custom:enabledColor="@color/frizzle_yellow"
                custom:disabledColor="@color/frizzle_faded_yellow"
                custom:completedDrawable="@drawable/map_app_circle_yellow_completed"/>

            <com.frizzl.app.frizzleapp.map.PracticeMapButton
                android:id="@+id/views_practice"
                style="@style/Button.MapPractice"
                android:background="@drawable/map_app_circle_green_selector"
                android:text="Views Practice"
                android:textAppearance="@style/Text.Map"
                app:layout_constraintBottom_toTopOf="@+id/polly_app"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.719"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/variables_practice"
                custom:enabledColor="@color/frizzle_green"
                custom:disabledColor="@color/frizzle_faded_green"
                custom:completedDrawable="@drawable/map_app_circle_green_completed"/>

            <com.frizzl.app.frizzleapp.map.AppMapButton
                android:id="@+id/polly_app"
                style="@style/Button.MapApp"
                android:background="@drawable/map_app_circle_purple_selector"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/onclick_practice"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.927"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/views_practice"
                custom:disabledColor="@color/frizzle_faded_purple"
                custom:enabledColor="@color/frizzle_purple"
                custom:appID="1"
                custom:completedDrawable="@drawable/map_app_circle_purple_completed">

                <ImageButton
                    android:id="@+id/ic_polly_app"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/ic_polly_app_icon"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/text_polly_app"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Polly App"
                    android:textAppearance="@style/Text.Map" />
            </com.frizzl.app.frizzleapp.map.AppMapButton>

            <com.frizzl.app.frizzleapp.map.PracticeMapButton
                android:id="@+id/onclick_practice"
                style="@style/Button.MapPractice"
                android:background="@drawable/map_app_circle_pink_selector"
                android:text="onClick Practice"
                android:textAppearance="@style/Text.Map"
                app:layout_constraintBottom_toTopOf="@+id/speakout_practice"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.63"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/polly_app"
                custom:disabledColor="@color/frizzle_faded_pink"
                custom:enabledColor="@color/frizzle_pink"
                custom:completedDrawable="@drawable/map_app_circle_pink_completed"
                custom:practiceID="2"/>

            <com.frizzl.app.frizzleapp.map.PracticeMapButton
                android:id="@+id/speakout_practice"
                style="@style/Button.MapPractice"
                android:background="@drawable/map_app_circle_orange_selector"
                android:text="speakOut Practice"
                android:textAppearance="@style/Text.Map"
                app:layout_constraintBottom_toTopOf="@+id/tutorial_app"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.351"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/onclick_practice"
                custom:disabledColor="@color/frizzle_faded_orange"
                custom:enabledColor="@color/frizzle_orange"
                custom:completedDrawable="@drawable/map_app_circle_orange_completed"
                custom:practiceID="1"/>

            <com.frizzl.app.frizzleapp.map.AppMapButton
                android:id="@+id/tutorial_app"
                style="@style/Button.MapApp"
                android:background="@drawable/map_app_circle_blue_selector"
                android:focusableInTouchMode="false"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/speakout_practice"
                custom:enabledColor="@color/frizzle_blue"
                custom:disabledColor="@color/frizzle_blue"
                custom:completedDrawable="@drawable/map_app_circle_blue_completed"
                custom:appID="0"
                >

                <ImageButton
                    android:id="@+id/ic_tutorial_app"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/ic_tutorial_app_icon"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/text_tutorial_app"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Tutorial App"
                    android:textAppearance="@style/Text.Map" />
            </com.frizzl.app.frizzleapp.map.AppMapButton>

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

    <android.support.v7.widget.Toolbar
        android:id="@+id/mapToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_height"
        android:layout_alignParentTop="true"
        android:layout_gravity="top"
        android:background="@color/white"
        android:elevation="4dp"
        android:gravity="center"
        android:theme="?attr/actionBarTheme">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/lessonTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/app_name"
            android:textAppearance="@style/Text.Title.Dark" />
    </android.support.v7.widget.Toolbar>

</android.support.constraint.ConstraintLayout>
