<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/mentor"
            style="@style/mentorImageRegister"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/start_margin" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/mentorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/mentor"
            android:layout_marginBottom="22dp"
            android:layout_toEndOf="@+id/mentor"
            android:background="@drawable/bubble_left"
            android:text="@string/onboardingMentorText4"
            android:textAppearance="@style/MentorText" />

        <EditText
            android:id="@+id/username"
            style="@style/registerEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mentor"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="false"
            android:layout_centerVertical="false"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="@string/required_username"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/password"
            style="@style/registerEditText"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_below="@+id/username"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="false"
            android:layout_centerVertical="false"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="@string/required_password"
            android:inputType="textPassword" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/birthdate"
            style="@style/registerEditText"
            android:layout_width="200dp"
            android:layout_height="43dp"
            android:layout_below="@+id/password"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="false"
            android:layout_centerVertical="false"
            android:layout_marginTop="15dp"
            android:hint="@string/birth_date" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/registerButton"
            style="@style/registerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/birthdate"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="false"
            android:layout_centerVertical="false"
            android:layout_marginTop="15dp"
            android:text="@string/register" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_below="@+id/registerButton"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/loginIcon"
                app:srcCompat="@drawable/ic_login"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:scaleType="fitXY" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/goToLoginButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="@string/already_have_an_account"
                android:textAppearance="@style/alreadyHaveAccount" />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
