<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context="com.frizzl.app.frizzleapp.goToAppBuilderFragment">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="500dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/popup_bg"
        android:gravity="fill_horizontal"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/you_re_about_to_build_a"
            android:textAppearance="@style/Text.Slide" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/appType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/fortune_teller_app"
            android:textAppearance="@style/Text.Slide"
            android:textColor="@color/frizzle_light_blue"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/apps"
            android:layout_width="324dp"
            android:layout_height="265dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/apps" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/createApps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin"
            android:gravity="center_horizontal"
            android:text="@string/create_many_more_apps_n_and_learn_to_code"
            android:textAppearance="@style/Text.Slide"
            android:textColor="@color/frizzle_blue" />


        <LinearLayout
            android:id="@+id/unlock"
            android:layout_width="220dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@drawable/unlock_button_background"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingEnd="25dp"
            android:paddingStart="25dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/unlockText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/unlock"
                android:textAppearance="@style/Text.Title.Light" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Text.Slide"
                    android:gravity="center"
                    android:text="@string/price"
                    android:textColor="@color/white"
                    android:textSize="17sp" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/perMonth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Text.Slide"
                    android:gravity="center"
                    android:text="@string/per_month"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/skip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            android:gravity="center"
            android:text="@string/skip" />

    </LinearLayout>

</FrameLayout>
