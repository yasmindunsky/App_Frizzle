<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context="com.frizzl.app.frizzleapp.goToAppBuilderFragment">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="530dp"
        android:background="@drawable/popup_bg"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/completed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/colors"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/default_margin"
            android:gravity="center"
            android:text="@string/youCompletedYourApp"
            android:textAppearance="@style/GoodJobTitle"
            android:textColor="@color/frizzle_purple"
            android:textSize="24sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/invite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/colors"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/inviteYourFriendsToPlay"
            android:textAppearance="@style/SlideText"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_margin="@dimen/default_margin">

            <ImageView
                android:id="@+id/king"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="false"
                android:scaleType="centerCrop"
                android:src="@drawable/trivia_king" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/letsPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_alignTop="@+id/king"
                android:layout_centerInParent="true"
                android:layout_marginTop="25dp"
                android:text="@string/letsPlay"
                android:textAllCaps="true"
                android:textAppearance="@style/GoodJobTitle"
                android:textColor="@color/frizzle_purple"
                android:textSize="24sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/myTriviaApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/letsPlay"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/myTriviaApp"
                android:textAppearance="@style/SlideText"
                android:textColor="@color/frizzle_light_blue"
                android:textSize="14sp" />

        </RelativeLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/shareButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/notReady"
            android:layout_alignParentBottom="false"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="@drawable/purple_button_background"
            android:paddingBottom="12dp"
            android:paddingEnd="32dp"
            android:paddingStart="32dp"
            android:paddingTop="12dp"
            android:text="@string/share"
            android:textAppearance="@style/ActivityTitleLight" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/notReady"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="false"
            android:layout_marginBottom="@dimen/default_margin"
            android:layout_marginTop="@dimen/default_margin"
            android:gravity="center"
            android:text="@string/skip"
            android:textAppearance="@style/italicFormText" />
    </LinearLayout>

</FrameLayout>
