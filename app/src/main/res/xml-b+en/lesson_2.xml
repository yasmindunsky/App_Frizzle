    <exercise>
        <type name="type">"SingleResponse"</type>
        <question name="question">"An app\\u0027s title is an example of what kind of View?"</question>
        <image name="image">"exercise_2_1"</image>
        <content name="content"></content>
        <possibilities name = "possibilities">
            <possibility name = "possibility">"TextView"</possibility>
            <possibility name = "possibility">"ImageView"</possibility>
        </possibilities>
        <answers name="answers">
            <answer name="answer">"TextView"</answer>
        </answers>
    </exercise>

