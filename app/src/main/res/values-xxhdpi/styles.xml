<resources>

     Base application theme.
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ActivityTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">23sp</item>
        <item name="android:letterSpacing">.08</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/hero_regular</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!--Intro-->


    <!--Lesson-->

    <!--Slides-->

    <style name="Text.Basic" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/alef_regular</item>
        <item name="android:textColor">@color/TextGrey</item>
        <item name="android:letterSpacing">.02</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:layout_gravity">left|top</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginStart">@dimen/start_margin</item>
        <item name="android:layout_marginEnd">@dimen/start_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

        <!--Exercises -->


    <!--App Builder-->
        <!--General-->


    <style name="errorText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/frizzle_orange</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/alef_regular</item>
        <item name="android:letterSpacing">.02</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:layout_gravity">left|top</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginStart">@dimen/start_margin</item>
        <item name="android:layout_marginEnd">@dimen/start_margin</item>
    </style>

        <!--Graphic Edit-->

    <style name="propertiesTableKey" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/alef</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="propertiesTableValue" parent="@style/propertiesTableKey">
        <item name="android:fontFamily">@font/alef</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.Title.PropertiesTable" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:layout_height">@dimen/app_bar_height</item>
        <item name="android:background">@drawable/table_text_edit_background</item>
        <item name="android:fontFamily">@font/hero_regular</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:text">@string/propertiesTableTitle</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="propertiesTableRow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:padding">10dp</item>
    </style>


</resources>
