<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yasmindunsky.frizzleapp.MapActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:background="@drawable/map_bg" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/mapToolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_bar_height"
            android:layout_alignParentTop="true"
            android:layout_gravity="top"
            android:background="@color/white"
            android:elevation="4dp"
            android:gravity="center"
            android:theme="?attr/actionBarTheme"
            app:navigationIcon="@drawable/ic_home">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/lessonTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/app_name"
                android:textAppearance="@style/ActivityTitle"
                android:textColor="@color/TextGrey"
                app:fontFamily="@font/hero_regular"
                app:textAllCaps="true" />
        </android.support.v7.widget.Toolbar>

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/lesson7"
            style="@style/mapLessonButton"
            android:layout_above="@+id/lesson6"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="49dp"
            android:layout_marginEnd="12dp"
            android:onClick="goToLesson"
            android:text="7" />

        <Button
            android:id="@+id/lesson6"
            style="@style/mapLessonButton"
            android:layout_above="@+id/lesson5"
            android:layout_alignEnd="@+id/lesson7"
            android:layout_marginBottom="46dp"
            android:layout_marginEnd="28dp"
            android:onClick="goToLesson"
            android:text="6" />

        <Button
            android:id="@+id/lesson5"
            style="@style/mapLessonButton"
            android:layout_above="@+id/lesson4"
            android:layout_marginBottom="9dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/lesson6"
            android:onClick="goToLesson"
            android:text="5" />

        <Button
            android:id="@+id/lesson4"
            style="@style/mapLessonButton"
            android:layout_above="@+id/lesson3"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="27dp"
            android:onClick="goToLesson"
            android:text="4" />

        <Button
            android:id="@+id/lesson3"
            style="@style/mapLessonButton"
            android:layout_above="@+id/lesson2"
            android:layout_marginBottom="18dp"
            android:layout_marginEnd="20dp"
            android:layout_toStartOf="@+id/lesson4"
            android:onClick="goToLesson"
            android:text="3" />

        <Button
            android:id="@+id/lesson2"
            style="@style/mapLessonButton"
            android:layout_above="@+id/lesson1"
            android:layout_marginBottom="48dp"
            android:layout_marginEnd="12dp"
            android:layout_toStartOf="@+id/lesson3"
            android:onClick="goToLesson"
            android:text="2" />

        <Button
            android:id="@+id/lesson1"
            style="@style/mapLessonButton"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"
            android:onClick="goToLesson"
            android:text="1" />

        <Button
            android:id="@+id/playground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/lesson5"
            android:layout_alignStart="@+id/lesson1"
            android:layout_marginBottom="11dp"
            android:onClick="goToPlayground"
            android:text="@string/playground" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
