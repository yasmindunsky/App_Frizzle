<resources>

     Base application theme.
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ActivityTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">.08</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/hero_regular</item>
    </style>

    <style name="HomeButton" parent="@android:style/Widget.Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:drawableLeft">@drawable/ic_home</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">20dp</item>
    </style>

    <!--Slides-->

    <style name="SlideText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">22dp</item>
        <item name="android:fontFamily">@font/calibri_regular</item>
        <item name="android:textColor">@color/TextGrey</item>
        <item name="android:letterSpacing">.02</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:layout_gravity">left|top</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginStart">60dp</item>
        <item name="android:layout_marginEnd">60dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/slide_text_height</item>
    </style>

    <!--Exercises -->

    <style name="ExerciseImage" parent="Theme.AppCompat.Light">
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <style name="ExerciseText" parent="@style/SlideText">
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="exerciseOptionButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/exercise_option_button_background</item>
        <item name="android:textColor">@drawable/exercise_option_button_text_color</item>
        <item name="android:fontFamily">@font/hero_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="exerciseTwoOptionButton" parent="@style/exerciseOptionButton">
        <item name="android:padding">16dp</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="editText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/exercise_text_edit_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/TextLightGrey</item>
        <item name="android:textStyle">italic</item>
        <item name="android:letterSpacing">.08</item>
        <item name="android:width">300dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:padding">10sp</item>
        <item name="android:paddingStart">20sp</item>
        <item name="android:paddingEnd">20sp</item>
    </style>

    <style name="checkButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/check_button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/hero_regular</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">.08</item>
        <item name="android:width">180dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:padding">10sp</item>
        <item name="android:paddingStart">20sp</item>
        <item name="android:paddingEnd">20sp</item>
    </style>

</resources>
