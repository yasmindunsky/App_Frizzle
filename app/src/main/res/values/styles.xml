        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
    </style>

    <style name="Text.PracticeSlide.error"  parent="Text.PracticeSlide">
        <item name="android:textColor">@color/practiceError</item>
        <item name="android:fontFamily">@font/calibri_bold</item>
    </style>

    <style name="Text.PracticeSlide.notice" parent="Text.PracticeSlide.error">
        <item name="android:textColor">@color/practiceNotification</item>
    </style>


</resources>
