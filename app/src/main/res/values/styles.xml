<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:breakStrategy">simple</item>
        <item name="android:layoutDirection">ltr</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:layoutDirection">ltr</item>
    </style>


    <style name="Button.SavePropertiesTable" parent="@android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:paddingStart">30sp</item>
        <item name="android:paddingEnd">30sp</item>
        <item name="android:background">@drawable/button_background_light_blue</item>
        <item name="android:text">@string/save</item>
        <item name="android:textAppearance">@style/Button.PracticeCTA</item>
    </style>

    <style name="Button.PracticeCTA" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/check_button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/hero_light</item>
        <item name="android:textSize">24sp</item>
        <item name="android:letterSpacing">.08</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:padding">10sp</item>
        <item name="android:paddingStart">20sp</item>
        <item name="android:paddingEnd">20sp</item>
    </style>

    <style name="Button.LightBlue" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_background_light_blue</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingStart">35sp</item>
        <item name="android:paddingEnd">35sp</item>p
    </style>

    <style name="Button.Thanks" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_background_pink</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingStart">25sp</item>
        <item name="android:paddingEnd">25sp</item>
        <item name="android:text">@string/thanks</item>
    </style>

    <style name="Button.Hollow.Blue" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_background_hollow_light_blue</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingStart">25sp</item>
        <item name="android:paddingEnd">25sp</item>
        <item name="android:textAppearance">@style/Text.Title.Blue</item>
    </style>

    <style name="Button.MapApp" parent="@android:style/Widget.Material.Button.Borderless">
        <item name="android:layout_height">135dp</item>
        <item name="android:layout_width">135dp</item>
        <item name="android:background">@drawable/map_app_circle</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">30dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="Button.MapPractice" parent="@android:style/Widget.Material.Button.Borderless">
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_width">90dp</item>
        <item name="android:background">@drawable/map_practice_circle</item>
        <item name="android:gravity">center</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="Button.MapIntro" parent="Button.MapPractice">
    </style>

    <style name="Text.Basic" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/calibri_regular</item>
        <item name="android:textColor">@color/TextGrey</item>
        <item name="android:letterSpacing">.02</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:layout_gravity">left|top</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/start_margin</item>
        <item name="android:layout_marginEnd">@dimen/start_margin</item>
        <item name="android:breakStrategy">simple</item>
    </style>

    <style name="Text.Task" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/calibri_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">.02</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="android:layout_gravity">left|center</item>
        <item name="android:breakStrategy">simple</item>
    </style>



    <style name="Text.Map" parent="@style/Text.Task">
        <item name="android:fontFamily">@font/calibri_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/TextGrey</item>
    </style>

    <style name="Text.Info" parent="@style/Text.Task">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/TextGrey</item>
        <item name="android:textAlignment">center</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Text.Info.Bold" parent="@style/Text.Info">
        <item name="android:fontFamily">@font/calibri_bold</item>
    </style>

    <style name="Text.ItalicForm" parent="@style/Text.Basic">
        <item name="android:textColor">@color/TextLightGrey</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Title" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">@font/hero_regular</item>
        <item name="android:textAlignment">center</item>
        <item name="android:letterSpacing">.08</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text.Title.Light" parent="@style/Text.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text.Title.Dark" parent="@style/Text.Title">
        <item name="android:textColor">@color/TextGrey</item>
        <item name="android:textSize">23sp</item>
    </style>

    <style name="Text.Title.PropertiesTable" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:layout_height">@dimen/app_bar_height</item>
        <item name="android:background">@drawable/popup_title_background</item>
        <item name="android:padding">10dp</item>
        <item name="android:text">@string/propertiesTableTitle</item>
        <item name="android:textAppearance">@style/Text.Title.Popup</item>
    </style>

    <style name="Text.Title.Popup" parent="Text.Title">
        <item name="android:layout_height">@dimen/app_bar_height</item>
        <item name="android:background">@drawable/popup_title_background</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Text.Title.Blue" parent="@style/Text.Title">
        <item name="android:textColor">@color/frizzle_light_blue</item>
    </style>

    <style name="Text.Title.Wow" parent="@style/Text.Title">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="Button.Basic" parent="@android:style/Widget.Button">
        <item name="android:fontFamily">@font/calibri_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Button.UserCreated" parent="@style/Button.Basic">
        <item name="android:background">@drawable/user_button_background</item>
        <item name="android:textColor">@color/TextGrey</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="TextView.UserCreated" parent="@android:style/TextAppearance.DeviceDefault.Medium">
        <item name="android:background">@drawable/user_text_view_background</item>
        <item name="android:textColor">@color/TextGrey</item>
        <item name="android:fontFamily">@font/calibri_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="ImageView.UserCreated" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="Text.TableKey" parent="@style/Text.Basic">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.TableValue" parent="@style/Text.TableKey">
        <item name="android:fontFamily">@font/calibri_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
    </style>


    <style name="AppBuilderTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/TextLightGrey</item>
        <item name="android:textColorHighlight">@color/frizzle_light_blue</item>
        <item name="android:fontFamily">@font/calibri_regular</item>
    </style>

    <style name="Text.KeyBoardsKeys" parent="@style/Text.Task">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/TextGrey</item>
    </style>

    <style name="Text.PracticeSlide" parent="Theme.AppCompat">
        <item name="android:textColor">@color/TextGrey</item>
        <item name="android:fontFamily">@font/calibri_light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="Text.PracticeSlide.infoText" parent="Text.PracticeSlide">
    </style>

    <style name="Text.PracticeSlide.reminderText" parent="Text.PracticeSlide">
        <item name="android:textColor">@color/frizzle_pink</item>
    </style>

    <style name="Text.PracticeSlide.taskText" parent="Text.PracticeSlide">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.PrePractice" parent="Text.Basic">
        <item name="android:fontFamily">@font/calibri_light</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
