<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:context="com.frizzl.app.frizzleapp.appBuilder.AppBuilderActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundDarkGrey">

        <android.support.v7.widget.Toolbar
            android:id="@+id/builderToolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_bar_height"
            android:layout_alignParentTop="true"
            android:background="@color/black"
            android:gravity="center"
            android:theme="?attr/actionBarTheme"
            app:navigationIcon="@drawable/ic_home">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/builderTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/app_builder_title"
                android:textAppearance="@style/Text.Title.Light" />

        </android.support.v7.widget.Toolbar>


        <ImageButton
            android:id="@+id/Play"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/builderToolbar"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="@dimen/start_margin"
            android:layout_marginTop="15dp"
            android:adjustViewBounds="false"
            android:background="@drawable/run_button_background"
            android:cropToPadding="false"
            android:elevation="10dp"
            android:onClick="onPlay"
            android:paddingLeft="12dp"
            android:paddingRight="8dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_play_run_icon" />

        <ImageView
            android:id="@+id/tablayoutBg"
            style="@style/AppBuilderTabLayout"
            android:layout_alignParentStart="true"
            android:layout_below="@id/builderToolbar"
            android:layout_marginStart="@dimen/start_margin"
            app:srcCompat="@drawable/tab_app_builder_unselected" />

        <android.support.design.widget.TabLayout
            android:id="@+id/tabLayout"
            style="@style/AppBuilderTabLayout"
            android:layout_alignParentStart="true"
            android:layout_below="@id/builderToolbar"
            android:layout_marginStart="@dimen/start_margin"
            app:tabGravity="center" />

        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/taskExpandableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tabLayout"
            app:el_duration="1000"
            app:el_expanded="true"
            app:el_parallax="0.5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/done"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/default_margin"
                    android:layout_marginTop="@dimen/default_margin"
                    android:layout_weight="1"
                    android:background="@drawable/ic_check_mark_with_circle"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/task"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/done"
                    android:paddingEnd="16dp"
                    android:paddingStart="@dimen/default_margin"
                    android:paddingTop="5dp"
                    android:text="Fixed height"
                    android:textAppearance="@style/taskInAppBuilderText" />

            </RelativeLayout>

        </net.cachapa.expandablelayout.ExpandableLayout>

        <ImageButton
            android:id="@+id/clickToExpandTask"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/taskExpandableLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:gravity="center_horizontal|center"
            android:scaleType="fitCenter"
            android:text="="
            android:textColor="@color/TextLightGrey"
            android:textSize="30sp"
            app:srcCompat="@drawable/ic_expand_grab_icon" />

        <LinearLayout
            android:id="@+id/errorDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/backgroundDarkGrey"
            android:elevation="10dp"
            android:orientation="vertical"
            android:visibility="invisible">

            <ImageButton
                android:id="@+id/clickToExpandError"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:background="@android:color/transparent"
                android:gravity="center_horizontal|center"
                android:scaleType="fitCenter"
                android:text="="
                android:textColor="@color/TextLightGrey"
                android:textSize="30sp"
                app:srcCompat="@drawable/ic_expand_grab_icon" />

            <net.cachapa.expandablelayout.ExpandableLayout
                android:id="@+id/errorExpandableLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="10dp"
                app:el_duration="1000"
                app:el_expanded="true"
                app:el_parallax="0.5">

                <TextView
                    android:id="@+id/error"
                    style="@style/errorText"
                    android:text="Error text" />

            </net.cachapa.expandablelayout.ExpandableLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fragmentFrame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/clickToExpandTask"
            android:layout_marginTop="8dp"
            android:elevation="0dp">

        </FrameLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/goToLesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="15dp"
            android:clickable="true"
            android:onClick="goToLesson"
            app:backgroundTint="@color/frizzle_green"
            app:fabSize="normal"
            app:srcCompat="@drawable/ic_book_lessons_icon" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
